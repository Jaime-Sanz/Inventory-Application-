<!DOCTYPE html>
<html lang="en">
<%- include('partials/header') %> 
<body class="h-screen relative">
    <div class="absolute inset-0 bg-[url('/images/developerArt.jpg')] bg-cover bg-center "></div>
    <div class="relative flex h-full z-10">
        <%- include('partials/sidebar') %>
        <div class="flex-1 overflow-auto bg-white/10 shadow-[0_8px_32px_0_rgba(31,38,135,0.37)] backdrop-blur-[5.5px]">
            <input type="text" id="searchInput" placeholder="Search items..." class="p-2 mb-4 border rounded"/>
            <div class="flex flex-wrap m-auto p-4 mt-4" >
                <% items.forEach(item => { %>
                    <div class="item" data-name="<%= item.name %>"> <!-- Add a wrapper div with data-name -->
                        <img class="h-16 w-16 m-2 rounded-md border-black border-2" src="<%= item.img %>" alt="<%= item.name %>">
                    </div>
                <% }); %> 
            </div>
        </div>
    </div>
    <%- include('partials/search-script') %>
</body>
</html>
